<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <h1>Pharmacy System</h1>
      <img style="width: 200px; height: 200px; display: none" src="" id="output" alt="" /><br />
      <label for="image">Upload Your medicine Picture</label>
      <input type="file" name="image" onchange="loadfile(event)" />
      <br /><br />
      <label for="pharmacy">Choose Pharmacy:</label>
      <select name="pharmacy" id="">
        <option value="Bashir Sons Gujranwala">Bashir Sons</option>
        <option value="Clinix Gujranwala">Clinix</option>
        <option value="Jhole Lal Gujranwala">jhole Lal</option></select
      ><br /><br />

      <input type="submit" value="Submit" />
    </form>
  </body>
  <script>
    var loadfile = function (e) {
      var img = document.getElementById("output")
      img.src = URL.createObjectURL(event.target.files[0])
      img.style.display = "block"
    }
  </script>
</html>
